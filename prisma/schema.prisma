generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Organization {
  id             String @id @default(auto()) @map("_id") @db.ObjectId
  email          String @unique
  name           String
  hashedPassword String
}

model Employee {
  id              String    @id @default(auto()) @map("_id") @db.ObjectId
  name            String
  joiningDate     DateTime
  basicSalary     String
  salaryAllowance String
  processingDate  DateTime?
}

model SalaryProcess {
  id              String    @id @default(auto()) @map("_id") @db.ObjectId
  userId          String
  basicSalary     String
  salaryAllowance String
  addtitons       String
  deductions      String
  processingDate  DateTime?
}
